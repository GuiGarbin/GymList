<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/main_theme_pag">

    <TextView
        android:id="@+id/number_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Aula 1"
        android:textColor="@color/gray"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/name_exercise_workout_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        tools:text="nome do treino"
        app:layout_constraintTop_toBottomOf="@id/number_class"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/when_finished"
        app:layout_constraintWidth_percent="0.5"
        app:flow_horizontalBias="0.0"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/when_finished"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/name_exercise_workout_card"
        tools:text="concluido em: \n01/01/0001"
        android:textAlignment="textEnd"
        android:textColor="@color/gray"
        />

    <ImageButton
        android:id="@+id/button_delete_workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/delete"
        android:background="@color/main_theme_pag"
        />



</androidx.constraintlayout.widget.ConstraintLayout>