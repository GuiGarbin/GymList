<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_theme_pag">

    <TextView
        android:id="@+id/date_avaliation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="dia da avaliacao"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/weight_avaliation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="peso"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/date_avaliation"
        />

    <TextView
        android:id="@+id/fat_avaliation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="porcentagem corporal"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/weight_avaliation"
        />



</androidx.constraintlayout.widget.ConstraintLayout>