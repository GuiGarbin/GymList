<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_theme_pag">

    <TextView
        android:id="@+id/name_exercise_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="nome do exercicio"
        android:textColor="@color/orange"
        />

    <TextView
        android:id="@+id/times_exercised"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="4 series"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/name_exercise_row"
        />

    <TextView
        android:id="@+id/exercise_weight_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="40kg"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/times_exercised"
        />

</androidx.constraintlayout.widget.ConstraintLayout>