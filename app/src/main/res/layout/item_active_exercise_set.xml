<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_theme_pag">


    <TextView
        android:id="@+id/exercise_number_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="seire 1"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/weight_exercise_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="peso"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/exercise_number_set"
        app:layout_constraintEnd_toStartOf="@id/reps_exercise_set"
        />

    <TextView
        android:id="@+id/reps_exercise_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="reps"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/weight_exercise_set"
        app:layout_constraintEnd_toStartOf="@id/checkbox_exercise_set"
        />

    <CheckBox
        android:id="@+id/checkbox_exercise_set"
        android:background="@drawable/selector_checkbox_train"
        android:button="@null"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/reps_exercise_set"
        app:layout_constraintEnd_toEndOf="parent"
        android:checked="false"
        />

</androidx.constraintlayout.widget.ConstraintLayout>