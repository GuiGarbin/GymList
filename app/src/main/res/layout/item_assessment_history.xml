<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_theme_pag">

    <TextView
        android:id="@+id/date_avaliation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="dia da avaliacao"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/weight_avaliation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="peso"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/date_avaliation"
        />

    <TextView
        android:id="@+id/fat_avaliation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="porcentagem corporal"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/weight_avaliation"
        />

    <ImageButton
        android:id="@+id/button_delete_assessment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/delete"
        android:background="@color/main_theme_pag"
        android:padding="8dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>