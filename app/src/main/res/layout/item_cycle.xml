<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_theme_pag">

    <TextView
        android:id="@+id/name_cycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="nome do ciclo"
        android:textColor="@color/orange"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/objectives_cycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="objetivo"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/name_cycle"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/time_cycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="tempo de ciclo"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/objectives_cycle"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>