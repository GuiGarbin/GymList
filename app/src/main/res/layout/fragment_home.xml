<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/main_theme_pag"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/main_theme_pag"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/baseboard"
        >
    </ScrollView>

    <EditText
        android:id="@+id/introductionMainPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/intoduction"
        />

    <EditText
        android:id="@+id/weeklyGoalEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/introductionMainPage"
        android:text="@string/weekly_goal"
        />

    <LinearLayout
        android:id="@+id/weeklyGoalBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/weeklyGoalEditText"
        android:orientation="horizontal"
        />

    <TextView
        android:id="@+id/nextTrainTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/weeklyGoalBar"
        android:text="Proximo Treino"
        android:textColor="@color/white"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boxNextTrain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@+id/nextTrainTextView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="proximo treino"
            android:textColor="@color/white"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/buttonNextTrain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:backgroundTint="@color/orange"
        app:layout_constraintTop_toBottomOf="@+id/boxNextTrain"
        android:text="Bora treinar"
        />

    <TextView
        android:id="@+id/progressTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/buttonNextTrain"
        android:text="Seu Progresso"
        android:textColor="@color/white"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/progressTextView"
        >

        <TextView
            android:id="@+id/nameTrainCycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="nome do treino"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/timesTrained"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/nameTrainCycle"
            tools:text="19/30"
            android:textColor="@color/white"
            />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressBarTrainedTimes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/timesTrained"
            app:trackColor="#E0E0E0"
            app:indicatorColor="#4CAF50"
            app:trackCornerRadius="8dp"
            app:trackThickness="10dp"
            android:progress="0"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/baseboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="parent"
            android:padding="16dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/exerButton"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageButton
            android:id="@+id/exerButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="parent"
            android:padding="16dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/fitness"
            app:layout_constraintStart_toEndOf="@+id/homeButton"
            app:layout_constraintEnd_toStartOf="@id/runButton"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageButton
            android:id="@+id/runButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="parent"
            android:padding="16dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/run"
            app:layout_constraintStart_toEndOf="@+id/exerButton"
            app:layout_constraintEnd_toStartOf="@+id/userButton"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageButton
            android:id="@+id/userButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="parent"
            android:padding="16dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/user"
            app:layout_constraintStart_toEndOf="@+id/runButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>